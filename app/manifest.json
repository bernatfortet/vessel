{
	"manifest_version": 2,

	"name": "Vessel",
	"description": "Smart link saving",
	"version": "0.0	.1",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    
	"permissions": [
		"activeTab",
		"webNavigation",
		"contextMenus",
		"cookies",
		"tabs",
		"identity",
		"windows",
		"storage",
		"notifications",
		"\u003Call_urls>",
		"chrome://favicon/",
		"alarms",
		"activeTab",
		//"webRequest",
		"webRequestBlocking"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"web_accessible_resources": [
		"chrome://favicon/"
	],

	"content_scripts": [ {
		"matches": [
			"http://*/*",
			"https://*/*"
		],
		"js" :["tmp/scripts/content_script.js"],
		"run_at": "document_end"   
	}],

	"background": {
		"scripts": ["tmp/scripts/lib/asteroid.chrome.js", "tmp/scripts/lib/twitter-login.js", "tmp/scripts/lib/q.js", "tmp/scripts/lib/ddp.js", "tmp/scripts/background.js"],

		"persistent": false
	},

	"browser_action": {
		"default_icon": "icon.png"
		//,"default_popup": "tmp/index.html"
	}
}