mixin signature( message, sender, image )
	tr(style=backgroundColor, width="100%")
		td(valign='top', width=width, colspan='2')
			if message != ''
				p(style='width:500px; padding: 10px 0 0 50px; margin-bottom:0;')
					| #{message}
			if sender != ''
				p(style='width:500px; padding:0px 0 20px 50px; margin-top:0;')
					| #{sender}
			//if image
				p(style='padding: 0; text-align: center;')
					img(align='center', height='90', src='https://d2q0qd5iz04n9u.cloudfront.net/_ssl/proxy.php/http/gallery.mailchimp.com/75d4f4fc986612570d22d1659/images/aviate_logo_grey.png', style='width: 41px; height: 90px;', width='41')

mixin separator( height )
	tr(width='100%', height='#{height}px')
		td(valign='top', width='600', colspan='2')



mixin spacer( height )
	tr(width='100%',style=backgroundColor, height='#{height}px')
		td(valign='top', width='600', colspan='2')



mixin article( title, url, description, source)
	+spacer( 24 )
	tr(style=backgroundColor, width="100%")
			td(valign='top', width='100px', colspan='1')
				a(href="*|#{url}|*")
					img(align='center', width='199', height='192', src='https://gallery.mailchimp.com/85fa9b289574f17996df3126d/images/0f652982-e829-466a-b279-a6cff492bc49.png', alt="Check out our new update", style='width:199px; display:block; margin: 0 0 0 24px; text-align:center;' )

			td(valign='top', width='300px', colspan='1')
				a(href="*|#{url}|*")
					p(style='margin: 0px 0 8px 0; font-size: 22px; line-height: 24px; font-weight:bold;')
						| *|#{title}|*
				p(style='margin: 0 0 8px 0; font-size: 14px; line-height: 22px;')
					| *|#{description}|*
				p(style='margin: 0 0 8px 0; font-size: 14px; line-height: 22px;')
					| *|#{source}|*
	+spacer( 24 )
	+separator( 8 )